.header
    background radial-gradient(97.99% 14110% at 0.63% 100%, #39B1EE 0%, #73D1FC 48.93%, #37BCF5 96.96%)
    box-shadow 0px 2px 2px rgba(57, 177, 238, 0.96)    


.container
    padding 10px 120px

.header__logo
    width 72px
    height 100px

.header__flex
    display flex
    justify-content space-between
    align-items center

.header__nav-list
    display flex
    gap: 100px

.nav-list__item-link    
    text-decoration none
    color black
    text-transform uppercase
    font-family "Alegreya SC"
    font-weight 700
    font-size 28px
    line-height 38px
    &:hover
        color #E9D15C
        cursor pointer

.user__nav-list
    display flex
    gap 25px

.user__nav-btn
    background none
    border none

.user__nav-img
    width 35px
    height 35px
